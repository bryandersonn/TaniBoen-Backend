@model TaniBoen.Models.AddRegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="/assets/logo taniboen remove bg2.png">
    <link rel="stylesheet" href="/css/Taniboen_Navbar.css">
    <link rel="stylesheet" href="/css/Taniboen_SignUp_Page.css">
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Gabarito:wght@600&family=Katibeh&family=Libre+Franklin:wght@700&family=Nanum+Myeongjo&family=Oswald:wght@300&family=Poppins:wght@100&family=Roboto+Slab:wght@500&family=Roboto:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/Taniboen_Footer.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>TaniBoen</title>
</head>
<body>

    <div class="navbar">
        <div class="left-section">
            <a asp-controller="HomeGuest" asp-action="IndexGuest">
                <img src="/assets/logo taniboen remove bg2.png" alt="logo taniboen">
            </a>
            TaniBoen
        </div>
        <div class="right-section">
            <ul class="menu">
                <li class="menu-choice">
                    <a class="menu-link" asp-controller="HomeGuest" asp-action="IndexGuest">Home</a>
                </li>
                <li class="menu-choice">
                    <a class="menu-link" asp-controller="Login" asp-action="UserLogin">Login</a>
                </li>
                <li class="menu-choice">
                    <a class="menu-link" asp-controller="Register" asp-action="UserRegister">Sign Up</a>
                </li>
            </ul>
            <div class="hamburger">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </div>
        </div>
    </div>

    <div class="main">
        <section>
            <div class="signup-box">
                <div class="signup-title">
                    <img src="/assets/logo taniboen remove bg2.png">
                    Create Account
                </div>
                <table>
                    <form action="UserRegister" method="post" id="form-regis" autocomplete="off">
                    <tr>
                        <td><label for="name">Name</label></td>
                        <td>
                            <div class="input-account" id="input-name">
                                <input id="name-input" type="text" placeholder="Input Your Name Here" asp-for="Name">
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td><label for="phone-number">Phone Number</label></td>
                        <td>
                            <div class="input-account" id="input-phone-number">
                                <input id="phone-input" type="text" placeholder="0865 2234 7840" asp-for="PhoneNumber">
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td><label for="email">Email Address</label></td>
                        <td>
                            <div class="input-account" id="input-email">
                                <input id="email-input" type="text" placeholder="Input Your Email" asp-for="Email">
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td><label for="password" id="input-password">Password</label></td>
                        <td>
                            <div class="input-account" id="input-pass">
                                <input id="pass-input" type="password" placeholder="Input Your Password" asp-for="Password">
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td><label for="confirm-password" id="input-confirm-password">Confirm Password</label></td>
                        <td>
                            <div class="input-account">
                                <input id="confirm-input" type="password" placeholder="Confirm Your Password">
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <div id="input-checkbox"><input type="checkbox" id="checkbox-input"> <label for="remember">By clicking register, I agree to the terms and conditions</label></div>
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <div class="register">
                                @* <a class="menu-link" asp-controller="Login" asp-action="UserLogin"> *@
                                <a href="../Views/Login/UserLogin.cshtml">
                                    <input type="submit" value="Register">
                                </a>
                            </div>
                        </td>
                    </tr>
                    </form>
                </table>
            </div>
        </section>
    </div>

    <div class="footer">
        <div class="footer-upper">
            <div class="footer-upper-left">
                <div class="footer-upper-left-title">
                    Tentang TaniBoen
                </div>
                <div class="footer-upper-left-content">
                    Taniboen Indonesia dengan bangga fokus pada membangun masa depan yang kaya untuk pertanian Indonesia. Kami tinggal dan bekerja di daerah tersebut serta mewakili kepentingan dan aspirasi para produsen utama dan komunitas pedesaan, memberikan nilai nyata dalam setiap hal yang kami lakukan.
                </div>
            </div>
            <div class="footer-upper-right">
                <div class="footer-upper-right-title">
                    Kontak Kami
                </div>
                <div class="footer-upper-right-content">
                    <div class="locationfooter">
                        <i class="fa-solid fa-location-dot"></i>
                        <span>Cengkareng, Jakarta Barat</span>
                    </div>
                    <div class="emailfooter">
                        <i class="fa-solid fa-envelope"></i>
                        <span>taniboen@gmail.com</span>
                    </div>
                    <div class="phonefooter">
                        <i class="fa-solid fa-phone"></i>
                        <span>+62 813509080</span>
                    </div>
                    <div class="webfooter">
                        <i class="fa-solid fa-globe"></i>
                        <span>www.taniboen.com</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-lower">
            Copyright &copy; 2024 [TaniBoen] All Rights Reserved
        </div>
    </div>

    <script src="~/js/UserRegister.js"></script>
    @* <script src="~/js/Taniboen_Navbar.js"></script> *@

</body>
</html>